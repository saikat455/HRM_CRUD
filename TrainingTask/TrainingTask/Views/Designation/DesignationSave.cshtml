@model Designation
@{
    ViewData["Title"] = "Designation Save";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">@ViewData["Title"]</h2>
    </div>

    <form asp-action="DesignationSave" asp-controller="Designation" method="post" class="bg-light p-4 rounded shadow-sm">
        <input asp-for="Id" type="hidden" />
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label">Designation Name</label>
            <input asp-for="Name" class="form-control" type="text" placeholder="Enter designation name" required />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success">Save Designation</button>
            <a asp-action="Index" asp-controller="Designation" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
