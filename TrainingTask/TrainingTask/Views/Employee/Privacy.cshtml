@model List<Trainingtask.Models.DTO.EmployeeDTO>

<div class="container my-4">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-gradient">Employee List</h1>
    </div>

    <div class="text-end mb-3">
        <a asp-action="EmployeeSave" asp-controller="Employee" class="btn btn-success shadow-sm d-flex align-items-center">
            <i class="bi bi-plus me-2"></i> Add New Employee
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-uppercase text-secondary small">Employee Name</th>
                        <th class="text-uppercase text-secondary small">Address</th>
                        <th class="text-uppercase text-secondary small">City</th>
                        <th class="text-uppercase text-secondary small">Phone</th>
                        <th class="text-uppercase text-secondary small">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted p-4">
                                No employees available. Add a new employee to get started!
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@item.Name</td>
                                <td class="align-middle">@item.Address</td>
                                <td class="align-middle">@item.City</td>
                                <td class="align-middle">@item.Phone</td>
                                <td class="align-middle">
                                    <a asp-action="EmployeeSave" asp-controller="Employee" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-warning me-2 d-inline-flex align-items-center">
                                        <i class="bi bi-pencil me-1"></i> Edit
                                    </a>
                                    <a asp-action="EmployeeDelete" asp-controller="Employee" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-danger d-inline-flex align-items-center">
                                        <i class="bi bi-trash me-1"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .text-gradient {
        font-size: 2rem;
        font-weight: bold;
        background: linear-gradient(to right, #28a745, #43c37b);
        -webkit-background-clip: text;
        color: transparent;
    }
    h1 {
        font-size: 2rem;
        color: #0d6efd;
    }
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
    .btn-outline-warning, .btn-outline-danger {
        transition: background-color 0.2s ease;
    }
    .btn-outline-warning:hover {
        background-color: #ffc107;
        color: #fff;
    }
    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: #fff;
    }
</style>
