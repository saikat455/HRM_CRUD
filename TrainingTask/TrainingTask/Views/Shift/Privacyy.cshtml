@model List<Trainingtask.Models.DTO.ShiftDTO>

<div class="container my-4">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-gradient">Shift List</h1>
    </div>

    <div class="text-end mb-3">
        <a asp-action="ShiftSave" asp-controller="Shift" class="btn btn-success shadow-sm d-flex align-items-center">
            <i class="bi bi-plus me-2"></i> Add New Shift
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-uppercase text-secondary small">Shift Name</th>
                        <th class="text-uppercase text-secondary small">In Time</th>
                        <th class="text-uppercase text-secondary small">Out Time</th>
                        <th class="text-uppercase text-secondary small">Late Time</th>
                        <th class="text-uppercase text-secondary small">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted p-4">
                                No shifts available. Add a new shift to get started!
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@item.ShiftName</td>
                                <td class="align-middle">@item.In</td>
                                <td class="align-middle">@item.Out</td>
                                <td class="align-middle">@item.Late</td>
                                <td class="align-middle">
                                    <a asp-action="ShiftSave" asp-controller="Shift" asp-route-id="@item.ShiftId"
                                       class="btn btn-sm btn-outline-warning me-2 d-inline-flex align-items-center">
                                        <i class="bi bi-pencil me-1"></i> Edit
                                    </a>
                                    <a asp-action="ShiftDelete" asp-controller="Shift" asp-route-id="@item.ShiftId"
                                       class="btn btn-sm btn-outline-danger d-inline-flex align-items-center">
                                        <i class="bi bi-trash me-1"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .text-gradient {
        font-size: 2rem;
        font-weight: bold;
        background: linear-gradient(to right, #28a745, #43c37b);
        -webkit-background-clip: text;
        color: transparent;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .btn-outline-warning, .btn-outline-danger {
        transition: background-color 0.2s ease;
    }

        .btn-outline-warning:hover {
            background-color: #ffc107;
            color: #fff;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: #fff;
        }
</style>
